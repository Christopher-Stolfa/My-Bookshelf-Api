{
  "name": "backend",
  "version": "1.0.0",
  "main": "./index.js",
  "license": "MIT",
  "type": "commonjs",
  "scripts": {
    "lint": "eslint .",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --detectOpenHandles --forceExit",
    "restart": "pm2 restart index.js --update-env",
    "start": "pm2 start ./index.js",
    "dev": "nodemon ./index.js",
    "down": "npx sequelize-cli db:migrate:undo",
    "migrate": "npx sequelize-cli db:migrate",
    "make-seed": "npx sequelize-cli seed:generate --name init",
    "seed": "npx sequelize-cli db:seed:all",
    "doc": "jsdoc -c jsdoc.json"
  },
  "dependencies": {
    "axios": "^0.24.0",
    "bcrypt": "^5.0.1",
    "body-parser": "^1.19.1",
    "config": "^3.3.7",
    "connect-redis": "^6.0.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^10.0.0",
    "express": "^4.17.2",
    "express-session": "^1.17.2",
    "fs": "^0.0.1-security",
    "helmet": "^5.0.2",
    "moment": "^2.29.1",
    "multer": "^1.4.4",
    "mysql2": "^2.3.3",
    "nodemailer": "^6.7.2",
    "nodemon": "^2.0.15",
    "pg": "^8.7.3",
    "pg-hstore": "^2.3.4",
    "pm2": "^5.2.0",
    "redis": "v3",
    "sequelize": "^7.0.0-alpha.4",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-jest": "^27.5.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.5.1",
    "jsdoc": "^3.6.10",
    "prettier": "^2.5.1",
    "sequelize-cli": "^6.4.1",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.3"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "prettier"
    ],
    "env": {
      "node": true,
      "es6": true,
      "jest": true
    },
    "rules": {
      "eqeqeq": "warn",
      "prettier/prettier": "warn"
    }
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 120,
    "semi": true,
    "endOfLine": "auto"
  },
  "jest": {
    "globals": {
      "__DEV__": true
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(sucrase)/)"
    ],
    "transform": {
      "^.+\\.(js|jsx|ts|tsx|mjs)$": "babel-jest"
    },
    "setupFiles": [
      "dotenv/config"
    ]
  }
}
